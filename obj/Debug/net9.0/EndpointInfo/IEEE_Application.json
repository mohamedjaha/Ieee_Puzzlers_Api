            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "NewUserDTO": {
        "required": [
          "name",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "minLength": 1,
            "pattern": "^(PUZZLE_CREATOR|GAME_CREATOR|GAMER|ADMIN)$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "TournamentDTO": {
        "required": [
          "name",
          "password",
          "puzzelCount"
        ],
        "type": "object",
        "properties": {
